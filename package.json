{
  "name": "webpack-babel-boilerplate",
  "version": "1.0.0",
  "description": "A boilerplate for all es6 based needs.",
  "main": "index.js",
  "scripts": {
    "webpackdev": "concurrently \"webpack-dev-server --port 8080 --open --config ./webpack/webpack.dev.js\" \"nodemon ./backend/server.js localhost 9000\"",
    "nodedev": "concurrently \"NODE_ENV=development PORT=8080 nodemon devServer.js\" \"nodemon ./backend/server.js localhost 9000\"",
    "nodefront": "NODE_ENV=development PORT=8080 nodemon devServer.js",
    "stage": "npm run build && concurrently --kill-others \"node ./stage/server.js\" \"nodemon ./backend/server.js localhost 9000\"",
    "build": "npm run clean && webpack --config ./webpack/webpack.prod.js && cp ./dist/* ./stage/public",
    "clean": "rm  -f ./stage/public/* && rm -f ./dist/*",
    "watch": "webpack --watch --config ./webpack/webpack.config.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Victor Shahbazian",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-runtime": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^4.1.1",
    "css-loader": "^3.1.0",
    "eslint": "^6.1.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "express": "^4.17.1",
    "fibers": "^4.0.1",
    "file-loader": "^4.1.0",
    "html-webpack-plugin": "^3.2.0",
    "https-localhost": "^4.1.3",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "nodemon-webpack-plugin": "^4.0.8",
    "sass": "^1.22.9",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.39.1",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "@babel/runtime": "^7.5.5",
    "axios": "^0.19.0",
    "cors": "^2.8.5",
    "lodash": "^4.17.15",
    "pixi.js": "^5.1.1"
  }
}
